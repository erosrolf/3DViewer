pipeline {
  agent any

  environment {
    TELEGRAM_TOKEN = credentials('telegram-bot-token')
    CHAT_ID = "-1002115020059"
    def stagesStatus = ""
  }


  stages {
    stage("core_lib_build") {
      steps {
        sh 'printenv'
        echo "Start build core lib"
        dir ('src'){
          sh 'make build/core_lib.a'
        }
      }
      post {
        success {
          script {
            stagesStatus = "${stagesStatus}Core lib build: SUCCESS\n"
          }
        }
        failure {
          script {
            stagesStatus = "${stagesStatus}Core lib build: FAILURE\n"
          }
        }
      }
    }

    stage("core_test") {
      steps {
        echo "Start build core test"
        dir('src') {
          sh 'make core_test'
        }
      }
      post {
        success {
          script {
            stagesStatus = "${stagesStatus}Core test: SUCCESS\n"
          }
        }
        failure {
          script {
            stagesStatus = "${stagesStatus}Core test: FAILURE\n"
          }
        }
      }
    }
  }

  post {
    always {
      script {
        env.GIT_COMMIT_AUTHOR = sh(script: "git log -1 --pretty=format:'%an'", returnStdout: true).trim()
        env.GIT_COMMIT_MESSAGE = sh(script: "git log -1 --pretty=format:'%s'", returnStdout: true).trim()
        sh 'curl -s -X POST https://api.telegram.org/bot${TELEGRAM_TOKEN}/sendMessage -d chat_id=${CHAT_ID} -d text="ðŸ’¼ðŸ’¼ðŸ’¼\nBuild number ${BUILD_NUMBER}\npushed to ${GIT_BRANCH}, commit ID = ${GIT_COMMIT}\nPublisher:${GIT_COMMIT_AUTHOR}\nCommit message: ${GIT_COMMIT_MESSAGE}\n${stagesStatus}"'
      }
    }
  }
}
