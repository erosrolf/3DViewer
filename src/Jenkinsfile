pipeline {
  agent any

  environment {
    TELEGRAM_TOKEN = credentials('telegram-bot-token')
    CHAT_ID = "-1002115020059"
    TEXT = "${GIT_BRANCH} pulled, build number ${BUILD_NUMBER}, CI status = ${CI}"
  }

  stages {
    stage("core_lib_build") {
      steps {
        sh 'printenv'
        echo "Start build core lib"
        dir ('src'){
          sh 'make build/core_lib.a'
        }
      }
    }

    stage("core_test") {
      steps {
        echo "Start build core test"
        dir('src') {
          sh 'make core_test'
        }
      }
    }
  }

  post {
    success {
      script {
        sh 'curl -s -X POST https://api.telegram.org/bot${TELEGRAM_TOKEN}/sendMessage -d chat_id=${CHAT_ID} -d text="💼💼💼\n${GIT_BRANCH} pulled, build number ${BUILD_NUMBER}, CI status = ${CI} \nPIPELINE ✅!"'
      }
    }
    failure {
      script {
        sh 'curl -s -X POST https://api.telegram.org/bot${TELEGRAM_TOKEN}/sendMessage -d chat_id=${CHAT_ID} -d text="💼💼💼\n${GIT_BRANCH} pulled, build number ${BUILD_NUMBER}, CI status = ${CI} \nPIPELINE ❌!!!"'
      }
    }
  }
}
